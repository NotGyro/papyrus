{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "cargo test no threading",
			"command": "cargo",
			"args": [
				"test",
				"--",
				"--test-threads=1"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"type": "shell",
			"label": "update docs from README.md",
			"command": "cargo",
			"args": [
				"my-readme",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"type": "shell",
			"label": "run papyrus-pad",
			"command": "cargo",
			"args": [
				"run",
				"--bin",
				"papyrus-pad",
				"--features=\"azul-widgets\""
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"type": "shell",
			"label": "run papyrus",
			"command": "cargo",
			"args": [
				"run",
				"--bin",
				"papyrus",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"type": "shell",
			"label": "check all features",
			"command": "cargo",
			"args": [
				"check",
				"--features=\"azul-widgets\""
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"type": "shell",
			"label": "bench all features",
			"command": "cargo",
			"args": [
				"+nightly",
				"bench",
				"--features=\"azul-widgets\""
			],
			"problemMatcher": [
				"$rustc"
			]
		},
	]
}