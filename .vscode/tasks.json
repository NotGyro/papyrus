{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "cargo test no threading",
			"command": "cargo",
			"args": [
				"test",
				"--",
				"--test-threads=1"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"type": "shell",
			"label": "update docs from README.md",
			"command": "cargo",
			"args": [
				"my-readme",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"type": "shell",
			"label": "build docs website",
			"command": "mdbook",
			"args": [
				"build",
				"-d",
				"docs"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
	]
}